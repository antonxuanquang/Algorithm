package structural.filter;

import java.util.List;

public class OrCriteria implements Criteria {
	
	private Criteria criteria;
	private Criteria otherCriteria;
	
	public OrCriteria(Criteria criteria, Criteria secondCriteria) {
		this.criteria = criteria;
		otherCriteria = secondCriteria;
	}
	
	public List<Person> meetCriteria(List<Person> people) {
		List<Person> firstCriteriaList = criteria.meetCriteria(people);
		List<Person> secondCriteriaList = otherCriteria.meetCriteria(people);
		
		for (Person person: secondCriteriaList) {
			if (!firstCriteriaList.contains(person)) 
				firstCriteriaList.add(person);
		}
		
		return firstCriteriaList;
	}

}
