
public class Seven {
	public static void main (String[] args) {
		int matrix[][] = {{2,3,7,6},
		                  {1,1,6,7},
		                  {9,0,5,1},
		                  {8,9,10,11}};
		printMatrix(matrix);
		rotateMatrix(matrix);
		
		
	}

	private static void printMatrix(int[][] matrix) {
		for (int i = 0; i < matrix.length; i++) {
			for (int j = 0; j < matrix.length; j++) {
				System.out.print(matrix[i][j] + "\t");
			}
			System.out.println("");
		}
		System.out.println("\n\n");
	}

	private static void rotateMatrix(int[][] matrix) {
		rotateMatrix(matrix, 0, matrix.length - 1);
	}

	private static void rotateMatrix(int[][] matrix, int start, int end) {
		if ((end - start) <= 1) return;
		for (int leftshift = 0; leftshift <= end; leftshift++) {
			rotateRight(matrix, leftshift, start, end);
		}
		rotateMatrix(matrix, start - 1, end -1);
	}

	private static void rotateRight(int[][] matrix, int leftshift, int start, int end) {
		int temp = 	matrix[end - leftshift][start];
		matrix[leftshift][end] = matrix[start][leftshift];
		matrix[end][end - leftshift]= matrix[leftshift][end] 
		
	}
}
