
public class Twelve {
	
	/*
	 * 
	 * Eight Queens: Write an algorithm to print all ways of arranging eight
	 * queens on an 8x8 chess board so that none of them share the same row,
	 * column, or diagonal. In this case, "diagonal means all diagonals, not
	 * just the two that bisect the board.
	 * 
	 */
	
	private static class Position {
		int x, y;
		public Position(int x, int y) {
			this.x = x;
			this.y = y;
		}
		
		public boolean isIntersect(Position point) {
			if (x == point.x || y == point.y) return true;
			double slope = (x - point.x) / (y - point.y);
			return slope == 1 ? true : false; 
		}
		
		public boolean isIntersect(Position[] queens) {
			for (int i = 0; i < queens.length; i++) {
				if (queens[i] == null) return true;
				if (this.isIntersect(queens[i])) return true;
			}
			return false;
		}
	}
	
	
	public static int eightQueens(int size) {
		// loop through all possible position
		// add new position to queen array
		// add number of ways if go to the next column, given the same way of 
		// choosing
		Position [] queens = new Position[size];		
		return eightQueens(size, 0, queens);
	}

	private static int eightQueens(int size, int column, Position [] queens) {
		if (column == size) {
			// base case
		} else {
			for (int i = 0; i < size; i++) {
				Position myPosition = new Position(i, column);
				if (!myPosition.isIntersect(queens)) 
			}
		}
		
		return 0;
	}
}
