package one;

import java.util.ArrayList;
import java.util.List;

public class Hand {
	private List<Card> cardsOnHand = new ArrayList<Card>();
	
	public void witdrawACard(DeckOfCard deck) {
		if (cardsOnHand.size() > 5) {
			System.out.println("You can't withdraw more than 5 cards");
			return;
		}
		cardsOnHand.add(deck.withdrawARandomCard());
	}
	
	public int checkHand() {
		int sum = 0;
		for (Card card: cardsOnHand) {
			sum += card.getValue();
		}
		return sum;
	}
	
}
